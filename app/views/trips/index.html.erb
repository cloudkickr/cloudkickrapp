<h1>Listing trips</h1>

<table>
  <tr>
    <th>Route</th>
    <th>Service</th>
    <th>Trip</th>
    <th>Trip headsign</th>
    <th>Trip short name</th>
    <th>Direction</th>
    <th>Shape</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @trips.each do |trip| %>
  <tr>
    <td><%= trip.route_id %></td>
    <td><%= trip.service_id %></td>
    <td><%= trip.trip_id %></td>
    <td><%= trip.trip_headsign %></td>
    <td><%= trip.trip_short_name %></td>
    <td><%= trip.direction_id %></td>
    <td><%= trip.shape_id %></td>
    <td><%= link_to 'Show', trip %></td>
    <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
    <td><%= link_to 'Destroy', trip, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

